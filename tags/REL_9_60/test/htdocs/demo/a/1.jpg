#!/usr/bin/perl -w

use strict;
use CGI;

print "Content-type: image/jpg\r\n";
print "Cache-Control: no-cache\r\n";
print "\r\n";
my $n = rand(1) * 10 % 10;
my $src = "_$n.jpg";

open(DLFILE, "<$src") || Error('open', 'file');
my $record;
while ($record = <DLFILE>) {
  print $record;
 }

close (DLFILE) || Error ('close', 'file');
