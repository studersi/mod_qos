#
#   QS_LocKBytesPerSecLimitMatch \.iso 1024
#   QS_LocRequestLimitMatch      \.iso  300
#
INCLUDE scripts/ports

EXEC ./sleep.sh

CLIENT 2

_RPS 1000 65
_LOOP 5
_REQ localhost $QS_PORT_BASE
__GET /image.iso HTTP/1.1
__Host: localhost
__User-Agent: htt
__
_WAIT
_END LOOP
_CLOSE
_END RPS

_MATCH EXEC ";b/s;([0-9]*);" BS
_MATCH EXEC ";req;([0-9]*);" REQ
_EXEC tail -1 logs/qs_log_v0

# 1024kb +/- 10%
_IF "${BS}" LT 943718
_EXIT FAILED
_END IF
_IF "${BS}" GT 1153433
_EXIT FAILED
_END IF

# 1 req/sec
_IF "${REQ}" LT 59
_EXIT FAILED
_END IF
_IF "${REQ}" GT 61
_EXIT FAILED
_END IF

END
