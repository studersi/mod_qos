INCLUDE scripts/ports

CLIENT

_REQ localhost $QS_PORT_BASE
__POST /error-docs/error.shtml HTTP/1.1
__Host: localhost
__Content-Length: AUTO
__Content-Type: text/html; charset=utf-8
__
__<data>value1</data>
_EXPECT . "_5value1"
_WAIT

_CLOSE
_SLEEP 7000

_REQ localhost $QS_PORT_BASE
__POST /error-docs/error.shtml HTTP/1.1
__Host: localhost
__Content-Length: AUTO
__Content-Type: text/html; charset=utf-8
__
__<data>value1</data>
_EXPECT . "_5value1"
_WAIT

END

CLIENT 3
_SLEEP 1000

_REQ localhost $QS_PORT_BASE
__POST /cgi/sleep.cgi?s=4 HTTP/1.1
__Host: localhost
__Content-Length: AUTO
__Content-Type: text/html; charset=utf-8
__
__<data>value1</data>
_WAIT

END

CLIENT
_SLEEP 3000

_REQ localhost $QS_PORT_BASE
__POST /cgi/sleep.cgi?s=4 HTTP/1.1
__Host: localhost
__Content-Length: AUTO
__Content-Type: text/html; charset=utf-8
__
__<data>value1</data>
_EXPECT . "500 Internal Server Error"
_EXPECT . "!done"
_EXPECT . "code=012"
_WAIT
_CLOSE

END
