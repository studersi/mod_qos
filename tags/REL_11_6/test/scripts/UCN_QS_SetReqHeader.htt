#
# tests variable forwarding via HTTP headers
#

INCLUDE scripts/ports

CLIENT
_REQ localhost $QS_PORT_BASE
__GET /htt/index.html?id=2 HTTP/1.1
__Host: localhost
__Y-Forwarded-For: 127.0.0.2
__User-Agent: Mozilla
__
_EXPECT . "200 OK"
_EXPECT . "==AS=OK=="
_WAIT
_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /htt/index.html?id=2 HTTP/1.1
__Host: localhost
__Y-Forwarded-For: 127.0.0.2
__User-Agent: Mozilla
__
_EXPECT . "200 OK"
_EXPECT . "==AS=OK=="
_WAIT
_CLOSE

_SLEEP 300
_REQ localhost $QS_PORT_BASE
__GET /htt/index.html?id=5 HTTP/1.1
__Host: localhost
__Y-Forwarded-For: 31.201.167.4
__User-Agent: Mozilla
__
_EXPECT . "200 OK"
_EXPECT . "==AS=OK=="
_WAIT
_CLOSE

END

SERVER $QS_PORT_BASE6

_RES
_EXPECT . "X-ClientLimit1_Counter: 1"
_EXPECT . "Y-ClientLimit1_Counter: 1"
_EXPECT . "X-ClientLimit1: 2"
_EXPECT . "X-QS_Country: LO"
_EXPECT . "X-QS_SrvConn: 1"
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/plain
__
__==AS=OK==
_CLOSE

_RES
_EXPECT . "X-ClientLimit1_Counter: 2"
_EXPECT . "Y-ClientLimit1_Counter: 2"
_EXPECT . "X-ClientLimit1: 2"
_EXPECT . "X-QS_Country: LO"
_EXPECT . "X-QS_SrvConn: 1"
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/plain
__
__==AS=OK==
_CLOSE

_RES
_EXPECT . "X-ClientLimit1_Counter: 1"
_EXPECT . "Y-ClientLimit1_Counter: 1"
_EXPECT . "X-ClientLimit1: 5"
_EXPECT . "X-QS_Country: IS"
_EXPECT . "X-QS_SrvConn: 2"
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/plain
__
__==AS=OK==
_CLOSE

END

CLIENT
_SLEEP 200

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_WAIT
_CLOSE

END
