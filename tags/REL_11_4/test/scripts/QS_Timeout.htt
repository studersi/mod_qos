#
# $Id: QS_Timeout.htt,v 1.2 2014-05-13 19:13:44 pbuchbinder Exp $
#
# increase timeout for some requests
#
# Timeout 30
# QS_SetEnvIfQuery shortConnTimeOut=([0-9]*) QS_Timeout=$1
#
#HTTEST=/usr/local/bin/httest-2.4.9

INCLUDE scripts/ports

CLIENT

# single request
_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi HTTP/1.1
__User-Agent: Mozilla 01
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT
_CLOSE

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi?shortConnTimeOut=1 HTTP/1.1
__User-Agent: Mozilla 02
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "500 Internal Server Error"
_EXPECT . "!Method: POST"
_EXPECT . "!Body: 11111111111111"
_EXPECT . "!22222222222222"
_WAIT
_CLOSE
_SLEEP 100
_EXPECT EXEC "The timeout specified has expired: Error reading request entity data"
_EXEC tail -1 logs/error_log

# multiple requests per connection
_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi HTTP/1.1
__User-Agent: Mozilla 03
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi?shortConnTimeOut=1 HTTP/1.1
__User-Agent: Mozilla 04
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "500 Internal Server Error"
_EXPECT . "!Method: POST"
_EXPECT . "!Body: 11111111111111"
_EXPECT . "!22222222222222"
_WAIT
_CLOSE


# later req: timeout is set for the current request only
_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi HTTP/1.1
__User-Agent: Mozilla 05
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi?shortConnTimeOut=1 HTTP/1.1
__User-Agent: Mozilla 06
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 300
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi HTTP/1.1
__User-Agent: Mozilla 07
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 3000
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT

END
