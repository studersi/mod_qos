# reaches MaxRequestsPerChild (terminating supervisor thread)
#

INCLUDE scripts/ports

EXEC ./ctl.sh restart -D cont 2>/dev/null 1>/dev/null
EXEC echo "[Fri Jan 15 07:23:30 2010] [notice] Apache/2.2.xx test S_SrvMinDataRate_maxreq.htt" >> ./logs/error_log

CLIENT 10

#_AUTO_CLOSE on

_SLEEP 500
_RAND 100 500 SLEEP
_SLEEP $SLEEP

_LOOP 8

_LOOP 150

_REQ 127.0.0.1 $QS_PORT_BASE
__GET /index.html HTTP/1.1
__Host: 127.0.0.1
_SLEEP 50
__Connection: keep-alive
__
_MATCH headers "Connection: (.*)" CONNECTION
_EXPECT . "this is the root index"
_WAIT

_IF "$CONNECTION" MATCH "close"
_CLOSE
_END IF

_REQ 127.0.0.1 $QS_PORT_BASE
__GET /index.html HTTP/1.1
__Host: 127.0.0.1
_SLEEP 50
__Connection: keep-alive
__
_EXPECT . "this is the root index"
_WAIT

_CLOSE

_END LOOP

_END LOOP

# no errors
_EXPECT EXEC "\[Fri Jan 15 07:23:30 2010\] \[notice\] Apache/2.2.xx test S_SrvMinDataRate_maxreq.htt"
_EXEC tail -1 ./logs/error_log

END

