INCLUDE scripts/ports

CLIENT

_REQ localhost $QS_PORT_BASE
__GET /index.html?CELS HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "root index"
_EXPECT . "200 OK"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "QS_CondEventLimitCount;10/2\[CEL\]: 1"
_EXPECT . "200 OK"
_WAIT

_LOOP 3
_REQ localhost $QS_PORT_BASE
__GET /index.html?CELS HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "root index"
_EXPECT . "200 OK"
_WAIT
_END LOOP
_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "QS_CondEventLimitCount;10/2\[CEL\]: 4"
_EXPECT . "200 OK"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /index.html?CELD=3 HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "root index"
_EXPECT . "200 OK"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "QS_CondEventLimitCount;10/2\[CEL\]: 1"
_EXPECT . "200 OK"
_WAIT
_CLOSE

_LOOP 20
_REQ localhost $QS_PORT_BASE
__GET /index.html?CELS HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "root index"
_EXPECT . "200 OK"
_WAIT
_END LOOP

_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__User-Agent: Mozilla
__
_EXPECT . "QS_CondEventLimitCount;10/2\[CEL\]: 21"
_EXPECT . "200 OK"
_WAIT
_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /index.html?CELS HTTP/1.1
__Host: localhost
__User-Agent: CEL
__
_EXPECT . "!root index.html"
_EXPECT . "!200 OK"
_WAIT

END
