#
# QS_SrvMaxConnPerIP      2
#

INCLUDE scripts/ports

CLIENT 2

_REQ [fc00::111] $QS_PORT_BASE10
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "done"
_WAIT

END

CLIENT
_SLEEP 100
_REQ [fc00::111] $QS_PORT_BASE10
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "!200 OK"
_EXPECT . "500 Internal Server Error"
_WAIT
_CLOSE
_SLEEP 100
_EXPECT EXEC "mod_qos\(031\): access denied, QS_SrvMaxConnPerIP rule: max=2, concurrent connections=3, c=fc00::111"
_EXEC tail -1 logs/error_log

END

CLIENT
_SLEEP 100
_REQ [fc00::112] $QS_PORT_BASE10
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "done"
_WAIT

END

CLIENT 2
_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "done"
_WAIT
_CLOSE
END

CLIENT
_SLEEP 300
_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "!200 OK"
_EXPECT . "500 Internal Server Error"
_WAIT
_CLOSE
_SLEEP 100
_EXPECT EXEC "mod_qos\(031\): access denied, QS_SrvMaxConnPerIP rule: max=2, concurrent connections=3, c=127.0.0.1"
_EXEC tail -1 logs/error_log

_SLEEP 1000

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "done"
_WAIT

END
