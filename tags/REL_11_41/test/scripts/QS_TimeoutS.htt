# $Id: QS_TimeoutS.htt,v 1.2 2015-08-10 20:19:17 pbuchbinder Exp $
#
# increase (longer) timeout for some requests
#
# Timeout 3
# QS_SetEnvIfQuery shortConnTimeOut=([0-9]*) QS_Timeout=$1
#
#HTTEST=/usr/local/bin/httest-2.4.9

INCLUDE scripts/ports

CLIENT

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi HTTP/1.1
__User-Agent: Mozilla 01
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 4000
__22222222222222
_FLUSH
# apache pre 2.2.31: 500, post 400
_EXPECT . "(500 Internal Server Error)|(400 Bad Request)"
_EXPECT . "!Method: POST"
_EXPECT . "!Body: 11111111111111"
_EXPECT . "!22222222222222"
_WAIT
_CLOSE
_SLEEP 100
_EXPECT EXEC "The timeout specified has expired: Error reading request entity data"
_EXEC tail -1 logs/error_log

_REQ localhost $QS_PORT_BASE
__POST /cgi-local/post.cgi?shortConnTimeOut=30 HTTP/1.1
__User-Agent: Mozilla 02
__Host: localhost
__Content-Type: text/plain
__Content-Length: 32
__
__11111111111111
_FLUSH
_SLEEP 5000
__22222222222222
_FLUSH
_EXPECT . "Method: POST"
_EXPECT . "Body: 11111111111111"
_EXPECT . "22222222222222"
_WAIT
_CLOSE

END
