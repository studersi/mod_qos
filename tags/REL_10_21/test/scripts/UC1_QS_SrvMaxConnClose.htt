#
#   MaxClients              64
#   QS_SrvMaxConnClose         10%
#

INCLUDE scripts/ports

CLIENT 6

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=2 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "!Connection: close"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_WAIT

END

CLIENT 2
_SLEEP 500
_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT . "200 OK"
_EXPECT . "Connection: close"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__
_EXPECT ERROR "End of file found"
_WAIT

END
