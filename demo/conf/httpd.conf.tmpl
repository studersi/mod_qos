ServerName              127.0.0.1
StartServers            1
ServerLimit             1
MinSpareThreads         5
MaxSpareThreads         16
ThreadsPerChild         16
MaxClients              16
MaxRequestsPerChild     0

User                    ##USR##
Group                   users
ServerAdmin             webmaster@127.0.0.1
ServerRoot              ##ROOT##
DocumentRoot            ##ROOT##/../test/htdocs/demo
ServerSignature         off
HostnameLookups         off
UseCanonicalName        on
LockFile                ##ROOT##/logs/accept.lock
Timeout                 30
KeepAlive               on
MaxKeepAliveRequests    100
KeepAliveTimeout        5

LimitRequestFields      30
QS_EnableInternalIPSimulation off

Options                 FollowSymLinks Indexes Includes
DefaultType             text/plain
AddType                 text/html .shtml
AddOutputFilter         INCLUDES .shtml

LogFormat               "%h %l %u %t \"%r\" %>s %b \"%{User-Agent}i\" %T %{mod_qos_cr}e %{mod_qos_ev}e %{mod_qos_con}e id=%{UNIQUE_ID}e %{qs_special}e %{content-length}i %{mod_qos_user_id}e #%P"

LogLevel                warn
ErrorLog                ##ROOT##/logs/error_log
TransferLog             "|##ROOT##/../util/src/qsrotate -o ##ROOT##/logs/access_log -z -g 4 -s 3600 -f"
TransferLog             "|##ROOT##/../util/src/qslog -o ##ROOT##/logs/qs_log -f I....R.B.T.Q"
PidFile                 ##ROOT##/logs/apache.pid
CoreDumpDirectory       ##ROOT##/logs/


TypesConfig             ../test/conf/mime.types
LoadModule              status_module ##ROOT##/../httpd/modules/generators/.libs/mod_status.so
LoadModule              unique_id_module ##ROOT##/../httpd/modules/metadata/.libs/mod_unique_id.so
LoadModule              proxy_module ##ROOT##/../httpd/modules/proxy/.libs/mod_proxy.so
LoadModule              proxy_http_module ##ROOT##/../httpd/modules/proxy/.libs/mod_proxy_http.so
LoadModule              qos_module ##ROOT##/../httpd/modules/qos/.libs/mod_qos.so
LoadModule              parp_module ##ROOT##/../test/libexec/mod_parp.so
LoadModule              setenvifplus_module ##ROOT##/../test/libexec/mod_setenvifplus.so

SSLProtocol             all -SSLv2
SSLCipherSuite          RC4-SHA:RC4-MD5:AES256-SHA:AES128-SHA:DES-CBC3-SHA:!SSLv2:!EXP
SSLSessionCacheTimeout  864000
SSLMutex                file:##ROOT##/logs/ssl_mutex
SSLSessionCache         shmht:##ROOT##/logs/ssl_cache(33554432)
SSLRandomSeed           startup builtin

Listen                  server1:##QS_PORT_BASE##
<VirtualHost server1:##QS_PORT_BASE##>
   SSLCertificateKeyFile  ../test/ssl/key.pem
   SSLCertificateFile     ../test/ssl/cert.pem
   SSLVerifyDepth         10
   SSLEngine              on
   ServerName             server1

   ProxyRequests              Off
   <Proxy *>
      Order deny,allow
      Allow from all
   </Proxy>

   ProxyPass                  /error-docs !
   ProxyPass                  /status !
   ProxyPass                  /test !
   ProxyPass                  /a !
   ProxyPass                  /b !
   ProxyPass                  /c !
   ProxyPass                  /qos !
   ProxyPass                  /htt http://localhost:##QS_PORT_BASE6##/htt retry=0
   ProxyPassReverse           /htt http://localhost:##QS_PORT_BASE6##/htt


<IfDefine 01slow>
   # max 10 (50%) concurrent requests per application
   QS_LocRequestLimit /  15
   QS_LocRequestLimit /a 15
   QS_LocRequestLimit /b 15
   QS_LocRequestLimit /c 15
</IfDefine>

   ScriptAlias /a/1.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/2.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/3.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/4.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/5.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/6.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/7.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/8.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   ScriptAlias /a/9.jpg ##ROOT##/../test/htdocs/demo/a/1.jpg
   <Location /a>
        Options ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
   </Location>
   
   ScriptAlias /b ##ROOT##/../test/htdocs/demo/b
   <Location /b>
        Options ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
   </Location>
   
   ScriptAlias /c/1.jpg ##ROOT##/../test/htdocs/demo/c/1.jpg
   ScriptAlias /c/2.jpg ##ROOT##/../test/htdocs/demo/c/1.jpg
   ScriptAlias /c/3.jpg ##ROOT##/../test/htdocs/demo/c/1.jpg
   ScriptAlias /c/login.cgi ##ROOT##/../test/htdocs/demo/c/login.cgi
   <Location /c>
        Options ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
   </Location>

   <Location /qos>
        SetHandler qos-viewer
   </Location>

</VirtualHost>
