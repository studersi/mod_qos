# $Id: 111_QS_LocKBytesPerSecLimitMatch.htt,v 1.3 2016-02-18 21:41:53 pbuchbinder Exp $
#
#   QS_LocKBytesPerSecLimitMatch  ^/limitbs/.*   500
#

INCLUDE scripts/ports

CLIENT 2

_AUTO_CLOSE on

_SET counter=0
_SET bytes=0
_DATE:GET_TIME start

_RPS 200 120
_REQ localhost $QS_PORT_BASE
__GET /limitbs/image.iso HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_MATCH headers "Content-Length: ([0-9]*)" ct
_EXPECT . "200 OK"
_WAIT
_SLEEP 50
_MATH:OP $counter ADD 1 counter
_MATH:OP $bytes ADD $ct bytes
_END RPS

_DATE:GET_TIME end

_MATH:OP $end SUB $start duration
_MATH:OP $bytes DIV $duration bs

_MATCH EXEC "b/s;([0-9]+);" BS
_EXEC tail -1 logs/qslog.csv

# 5000 +/-10% 
_IF "$BS" LT "450000"
_EXIT FAILED
_END IF
_IF "$BS" GT "550000"
_EXIT FAILED
_END IF

# 500/2clients +/-10%
_IF "$bs" LT "225"
_EXIT FAILED
_END IF
_IF "$bs" GT "275"
_EXIT FAILED
_END IF

END

