#
# client ip is marked as VIP
#

INCLUDE scripts/ports

SET TME=1000

CLIENT

# first request from this ip (not yet a vip client)
_REQ server1 SSL:$QS_PORT_BASE2
_-GET /
_-i
_FLUSH
_SLEEP $TME
_-n
_FLUSH
_SLEEP $TME
_-d
_FLUSH
_SLEEP $TME
_-e
_FLUSH
_SLEEP $TME
_-x
_FLUSH
_SLEEP $TME
_-.
_FLUSH
_SLEEP $TME
_-h
_FLUSH
_SLEEP $TME
_-t
_FLUSH
_SLEEP $TME
_-m
__l HTTP/1.1
__Host: server1
__User-Agent: Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.8.1.5) Gecko/20070713 Firefox/2.0.0.5
__Connection: keep-alive
__
_EXPECT ERROR "Software caused connection abort"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_qos\(034\): access denied, QS_SrvMinDataRate rule \(in\): min=123, this connection=0"
_EXEC tail -1 logs/error_log

_SLEEP 4000
_EXEC date

# user gets authenticated
_REQ server1 SSL:$QS_PORT_BASE2
__GET /htt/login HTTP/1.1
__Host: server1
__User-Agent: Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.8.1.5) Gecko/20070713 Firefox/2.0.0.5
__
_WAIT
_CLOSE

_SLEEP 200
_EXEC date

# vip user are not denied
_REQ server1 SSL:$QS_PORT_BASE2
_-GET /
_-i
_FLUSH
_SLEEP $TME
_-n
_FLUSH
_SLEEP $TME
_-d
_FLUSH
_SLEEP $TME
_-e
_FLUSH
_SLEEP $TME
_-x
_FLUSH
_SLEEP $TME
_-.
_FLUSH
_SLEEP $TME
_-h
_FLUSH
_SLEEP $TME
_-t
_FLUSH
_SLEEP $TME
_-m
__l HTTP/1.1
__Host: server1
__User-Agent: Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.8.1.5) Gecko/20070713 Firefox/2.0.0.5
__Connection: keep-alive
__
_EXPECT . "this is the root index.html"
_WAIT

END

SERVER $QS_PORT_BASE6
_RES
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/plain
__x-web-login: valid
__
__login successful

END
