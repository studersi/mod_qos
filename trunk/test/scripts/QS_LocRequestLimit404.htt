# $Id: QS_LocRequestLimit404.htt,v 1.1 2011-11-23 11:20:19 pbuchbinder Exp $
#
#   QS_LocRequestLimit         /localpages/reqlimit 10
#
# see what appens on internal redirects (ErrorPage)
#

INCLUDE scripts/ports

CLIENT 5

_RAND 1 3 SLEEP
_LOOP 10

_REQ localhost $QS_PORT_BASE
__GET /localpages/reqlimit/scripts/sleep.cgi?s=$SLEEP HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: event
__
_EXPECT . "done"
_WAIT
_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /localpages/reqlimit/scripts/guguseli HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: event
__
_EXPECT . "ErrorDocument 404"
_WAIT
_CLOSE

_END LOOP

_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_MATCH body "QS_LocRequestLimit;10\[/localpages/reqlimit\]: (.*)" VALUE
_WAIT
_IF "$VALUE" MATCH "^0$"
_EXIT FAILED
_END IF


_LOOP 3

_REQ localhost $QS_PORT_BASE
__GET /localpages/reqlimit/scripts/sleep.cgi?s=$SLEEP HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: event
__
_EXPECT . "done"
_WAIT
_CLOSE

_END LOOP

END

BLOCK FINALLY
_SLEEP 2000
# at the end, the counter must be 0
_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_MATCH body "QS_LocRequestLimit;10\[/localpages/reqlimit\]: (.*)" VALUE
_WAIT
_IF "$VALUE" NOT MATCH "^0$"
_EXIT FAILED
_END IF

END

