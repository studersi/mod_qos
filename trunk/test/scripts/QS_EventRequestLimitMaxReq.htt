BLOCK FINALLY
_SLEEP 2000
# at the end, the counter must be 0
_REQ localhost $QS_PORT_BASE
__GET /qos?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_MATCH body "QS_EventRequestLimit;3\[var=\(queryv=abc\)\]: (.*)" VALUE
_WAIT
_IF "$VALUE" NOT MATCH "^0$"
_EXIT FAILED
_END IF

END
