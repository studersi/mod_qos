#   QS_MileStone deny "^GET /htt/index.html"
#   QS_MileStone deny "^GET /htt/logo.gif"
#   QS_MileStone deny "^POST /htt/login"
#   QS_MileStone deny "^GET /htt/.*\.zip HTTP/..."
#

INCLUDE scripts/ports

CLIENT

_REQ localhost $QS_PORT_BASE
__GET /htt/ HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "!Set-Cookie"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/index.html HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_MATCH headers "Set-Cookie: QSSCD=(.*); Path" QSSCD
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "Set-Cookie"
_WAIT

_SLEEP 2000

_REQ localhost $QS_PORT_BASE
__GET /htt/any.gif HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "!Set-Cookie"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/logo.gif HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__
_MATCH headers "Set-Cookie: QSSCD=(.*); Path" QSSCD
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "Set-Cookie"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/logo.gif HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "!Set-Cookie"
_WAIT

_REQ localhost $QS_PORT_BASE
__POST /htt/login HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__Content-Length: AUTO
__Content-Type: application/x-www-form-urlencoded
__
_-id=pascal&pwd=1234
_MATCH headers "Set-Cookie: QSSCD=(.*); Path" QSSCD
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "Set-Cookie"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/software.zip HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__
_MATCH headers "Set-Cookie: QSSCD=(.*); Path" QSSCD
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "Set-Cookie"
_WAIT

_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /htt/data.zip HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "code=047"
_EXPECT . "HTTP/1.1 500"
_EXPECT . "!200"
_EXPECT . "!==AS1=="
_EXPECT . "!Set-Cookie"
_WAIT

_CLOSE

_REQ localhost $QS_PORT_BASE
__GET /htt/data.zip HTTP/1.1
__Host: localhost
__Connection: keep-alive
__Cookie: QSSCD=$QSSCD
__
_EXPECT . "200"
_EXPECT . "==AS1=="
_EXPECT . "!Set-Cookie"
_WAIT

END

