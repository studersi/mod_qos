#<IfDefine uc1l6>
#   LoadModule   setenvifplus_module libexec/mod_setenvifplus.so
#   SetEnvIfPlus Request_URI ^/dvd[0-9]?.iso dvd
#   QS_EventKbytesPerSecLimit dvd 5000
#   SetEnvIfPlus Request_URI ^/image.iso img
#   QS_EventKbytesPerSecLimit img 500
#   QS_LocKBytesPerSecLimitMatch ^/[a-z]+.html  200
#   <Location /qos >
#       SetHandler qos-viewer
#   </Location>
#</IfDefine>
# 
# * very small file (index.html 230 bytes)
# * mixed small/very small

INCLUDE scripts/ports

EXEC ./sleep.sh

CLIENT

_RPS 1000 70
_LOOP 5
_REQ localhost $QS_PORT_BASE
__GET /index.html HTTP/1.1
__Host: localhost
__User-Agent: htt
__
_WAIT
_END LOOP
_CLOSE
_END RPS

_MATCH EXEC ";b/s;([0-9]*);" BS
_EXEC tail -1 logs/qs_log_v0

_IF "${BS}" LT 100000
_EXIT FAILED
_END IF
_IF "${BS}" GT 300000
_EXIT FAILED
_END IF

_RPS 1000 70
_LOOP 5
_REQ localhost $QS_PORT_BASE
__GET /index.html HTTP/1.1
__Host: localhost
__User-Agent: htt
__
_WAIT
_END LOOP
_CLOSE
_END RPS

_MATCH EXEC ";b/s;([0-9]*);" BS
_EXEC tail -1 logs/qs_log_v0

_IF "${BS}" LT 100000
_EXIT FAILED
_END IF
_IF "${BS}" GT 300000
_EXIT FAILED
_END IF


END

CLIENT

_SLEEP 60000

_RPS 1000 70
_LOOP 5
_REQ localhost $QS_PORT_BASE
__GET /large.html HTTP/1.1
__Host: localhost
__User-Agent: htt
__
_WAIT
_END LOOP
_CLOSE
_END RPS

END
