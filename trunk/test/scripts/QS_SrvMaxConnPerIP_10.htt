_MATCH EXEC "(.*)" NUMA
_EXEC grep -c 'mod_qos(031)' logs/error_log
_OP $NUMA SUB $NUM TOT
_IF "$TOT" NOT MATCH "10"
_EXIT FAILED
_END IF

