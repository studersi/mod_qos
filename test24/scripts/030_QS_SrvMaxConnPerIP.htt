# $Id: 030_QS_SrvMaxConnPerIP.htt,v 1.2 2013-10-29 07:35:25 pbuchbinder Exp $
#
#      QS_SrvMaxConnPerIP         30
#

INCLUDE scripts/ports

EXEC ./ctl.sh restart -D real_ip >/dev/null

CLIENT 30

_REQ localhost $QS_PORT_BASE
__GET /cgi/sleep.cgi?s=3 HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "done"
_WAIT
_CLOSE
# QS_Srv* directives shall not be used (connection cleanup takes very long)
_SLEEP 1000

_REQ localhost $QS_PORT_BASE
__GET /cgi/sleep.cgi?s=1 HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "done"
_WAIT

END

CLIENT
_SLEEP 1000
_REQ localhost $QS_PORT_BASE
__GET /cgi/sleep.cgi?s=3 HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "500 Internal Server Error"
_EXPECT . "!done"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_qos\(031\): access denied, QS_SrvMaxConnPerIP rule: max=30, concurrent connections=31"
_EXEC tail -1 logs/error_log

END

BLOCK FINALLY
_EXEC ./ctl.sh restart 2>/dev/null 1>/dev/null
END
