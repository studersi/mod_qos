#
#  QS_Events                  on
#  QS_ClientEventLimitCount 3 10
#
#  QS_SetEnvResHeaderMatch    X-Login           failed
#  QS_SetEnvIf                X-Login    !QSNOT QS_Limit=yes
#  QS_UnsetResHeader          X-Login
#

INCLUDE scripts/ports

CLIENT

_REQ localhost $QS_PORT_BASE
__GET /htt/index1.html HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "!X-Login"
_EXPECT . "200"
_EXPECT . "AS1"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/index1.html HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "!X-Login"
_EXPECT . "200"
_EXPECT . "AS2"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/index1.html HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "!X-Login"
_EXPECT . "200"
_EXPECT . "AS3"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /htt/index1.html HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "code=067"
_WAIT
_CLOSE
_SLEEP 200

_EXPECT EXEC "mod_qos\(067\): access denied, QS_ClientEventLimitCount rule"
_EXEC tail -1 logs/error_log

# server needs to be restarted before running this test
_SLEEP 11000
_REQ localhost $QS_PORT_BASE
__GET /status?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "e;mod_qos\(067\);new: 1"
_EXPECT . "e;mod_qos\(067\);total: 1"
_WAIT

_REQ localhost $QS_PORT_BASE
__GET /status?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__
_EXPECT . "e;mod_qos\(067\);new: 0"
_EXPECT . "e;mod_qos\(067\);total: 1"
_WAIT

END

SERVER $QS_PORT_BASE6
_RES
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/html
__X-Login: failed
__
__==AS1==

_RES
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/html
__X-Login: failed
__
__==AS2==

_RES
_WAIT
__HTTP/1.1 200 OK
__Content-Length: AUTO 
__Content-Type: text/html
__X-Login: failed
__
__==AS3==

END
