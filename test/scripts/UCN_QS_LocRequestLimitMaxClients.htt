#
# another test verifying MaxRequestsPerChild
#

INCLUDE scripts/ports

CLIENT 5

_REQ localhost $QS_PORT_BASE
__GET /a/sleep.cgi?s=8 HTTP/1.1
__Host: localhost
__User-Agent: slow
__
_EXPECT . "done"
_EXPECT . "200 OK"
_WAIT
_CLOSE

END

CLIENT 10
_SLEEP 100
_LOOP 40
_REQ localhost $QS_PORT_BASE
__GET /status?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: many
__
_EXPECT . "BusyWorkers"
_EXPECT . "200 OK"
_WAIT
_CLOSE
_END LOOP

_LOOP 12
_REQ localhost $QS_PORT_BASE
__GET /status?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: many
__
_EXPECT . "BusyWorkers"
_EXPECT . "200 OK"
_WAIT
_CLOSE
_SLEEP 200
_END LOOP

_REQ localhost $QS_PORT_BASE
__GET /404 HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: 404
__
_EXPECT . "404 Not Found"
_WAIT
_CLOSE

END

BLOCK FINALLY

_SLEEP 1000
_REQ localhost $QS_PORT_BASE
__GET /status?auto HTTP/1.1
__Host: localhost
__Connection: keep-alive
__User-Agent: verify
__
_EXPECT . "v;.*QS_LocRequestLimit;30[/]: 1$"
_EXPECT . "200 OK"
_WAIT

END
